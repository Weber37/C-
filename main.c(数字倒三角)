#include <stdio.h>
#include <math.h>

void main(){
    int n,temp,i,j,k=1;
    printf("Input n:");
    scanf("%d",&n);
    for(j=1;j<=n;j++){
        temp=k;
        for(i=1;i<=n-j+1;i++){
            printf("%5d",temp);
            temp+=i+j;
        }
        printf("\n");
        k=k+j;
    }
}
/*输出如下高度为n的倒三角
  1    3    6    10   15   21
  2    5    9    14   20
  4    8    13   19
  7    12   18
  11   17
  16        */
